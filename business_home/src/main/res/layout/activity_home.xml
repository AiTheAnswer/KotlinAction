<?xml version="1.0" encoding="utf-8"?><!-- 主页布局文件-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- 内容布局 -->
    <FrameLayout
        android:id="@+id/home_layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1"
        android:background="@color/gray" />

    <!-- 底部主题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:orientation="horizontal">
        <!-- 每日精选 -->
        <TextView
            android:id="@+id/main_txt_title_daily_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_dp_5"
            android:text="@string/daily_select" />

        <!-- 发现 -->
        <TextView
            android:id="@+id/main_txt_title_found"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_dp_5"
            android:text="@string/found" />
        <!-- 热门 -->
        <TextView
            android:id="@+id/main_txt_title_hot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_dp_5"
            android:text="@string/hot" />
        <!-- 我的 -->
        <TextView
            android:id="@+id/main_txt_title_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_dp_5"
            android:text="@string/mine" />


    </LinearLayout>
</LinearLayout>
